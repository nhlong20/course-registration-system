<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Clazz" table="class" schema="public" catalog="coursesDB">
        <id name="classId">
            <column name="class_id" sql-type="integer"/>
        </id>
        <property name="classYear">
            <column name="class_year" sql-type="integer"/>
        </property>
        <property name="className">
            <column name="class_name" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>